<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.breezer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.breezer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.breezer.PrescriptionActivity"
            android:label="@string/title_activity_prescription" >
        </activity>
        <activity
            android:name="com.example.breezer.NewPrescriptionActivity"
            android:label="@string/title_activity_new_prescription" >
        </activity>
        <activity
            android:name="com.example.breezer.SymptomsActivity"
            android:label="@string/title_activity_symptoms" >
        </activity>
        <activity
            android:name="com.example.breezer.AddSymptomActivity"
            android:label="@string/title_activity_add_symptom" >
        </activity>
        <activity
            android:name="com.example.breezer.SymtomsLogActivity"
            android:label="@string/title_activity_symtoms_log" >
        </activity>
        <activity
            android:name="com.example.breezer.OptionsActivity"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name="com.example.breezer.EditSymptomsActivity"
            android:label="@string/title_activity_edit_symptoms" >
        </activity>
        <activity
            android:name="com.example.breezer.SavedPrescriptionActivity"
            android:label="@string/title_activity_saved_prescription" >
        </activity>
    </application>

</manifest>