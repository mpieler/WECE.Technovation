<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mymedbg"
    android:orientation="vertical"
    tools:context="com.example.breezer.PrescriptionActivity$PlaceholderFragment" >

	 <ListView
	     android:id="@+id/listViewFromDB"
	     android:layout_width="300dp"
	     android:layout_height="340dp"
	     android:layout_marginLeft="30dp"
	     android:layout_marginTop="75dp"
	     android:fastScrollEnabled="true"
	     android:scrollingCache="true"
	     android:visibility="visible" >

	 </ListView>

	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content" >

	     <TextView
	         android:id="@+id/home"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="60dp"
	         android:layout_marginTop="60dp"
	         android:clickable="true"
	         android:onClick="moveToMain"
	         android:text="@string/home"
	         android:textSize="18sp" />
	     
	     <TextView
	         android:id="@+id/addPrescriptionTitle"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginBottom="18dp"
	         android:layout_marginLeft="90dp"
	         android:layout_marginTop="60dp"
	         android:clickable="true"
	         android:onClick="moveToAddNewPrescription"
	         android:text="@string/addPrescription"
	         android:textSize="18sp" />

	 </LinearLayout>
	
</LinearLayout>
