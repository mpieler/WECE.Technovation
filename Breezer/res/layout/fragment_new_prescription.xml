<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.breezer.NewPrescriptionActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/prescriptionSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prescriptionName"
        android:layout_below="@+id/textView6"
        android:ems="10"
        android:hint="@string/prescriptionSize" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/prescriptionSize"
        android:text="@string/prescriptionColor" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/prescriptionFrequency"
        android:text="@string/prescriptionStartdate" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/prescriptionColor"
        android:text="@string/prescriptionFrequency" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/prescriptionStartdate"
        android:text="@string/prescriptionAmount" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/prescriptionName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/prescriptionName"
        android:text="@string/prescriptionSize" />

    <EditText
        android:id="@+id/prescriptionColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:hint="@string/prescriptionColor" />

    <EditText
        android:id="@+id/prescriptionFrequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:ems="10"
        android:hint="@string/prescriptionFrequency" />

    <EditText
        android:id="@+id/prescriptionStartdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:hint="@string/prescriptionStartdate" />

    <EditText
        android:id="@+id/prescriptionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prescriptionStartdate"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:hint="@string/prescriptionName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_toRightOf="@+id/prescriptionName"
        android:text="@string/saveButton" />

    <EditText
        android:id="@+id/prescriptionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:hint="@string/prescriptionAmount" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/prescriptionAmount"
        android:text="@string/prescriptionRemaining" />

    <EditText
        android:id="@+id/prescriptionRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prescriptionFrequency"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:hint="@string/prescriptionRemaining" >

        <requestFocus />
    </EditText>

</RelativeLayout>