<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addprescriptionscreenbg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.breezer.NewPrescriptionActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="334dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prescriptionName" />
            
     	<TextView
     	    android:id="@+id/textView4"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:paddingTop="10dp"
     	    android:text="@string/prescriptionAmount" />
     	
     	<TextView
     	    android:id="@+id/textView7"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:paddingTop="10dp"
     	    android:text="@string/prescriptionFrequency" />
     	
     	<TextView
     	    android:id="@+id/textView2"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:paddingTop="10dp"
     	    android:text="@string/prescriptionRemaining" />
     	
     	<TextView
     	    android:id="@+id/textView6"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:paddingTop="15dp"
     	    android:text="@string/prescriptionSize" />
     	
     	<TextView
     	    android:id="@+id/textView5"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:paddingTop="20dp"
     	    android:text="@string/prescriptionColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="334dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical" >
        
        <EditText
            android:id="@+id/prescriptionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/prescriptionName"
            android:textSize="10sp" />
        
         <EditText
             android:id="@+id/prescriptionAmount"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:ems="10"
             android:hint="@string/prescriptionAmount"
             android:textSize="10sp" />
         
         <EditText
             android:id="@+id/prescriptionFrequency"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:ems="10"
             android:hint="@string/prescriptionFrequency"
             android:textSize="10sp" />
         
       	<EditText
       	    android:id="@+id/prescriptionRemaining"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:ems="10"
       	    android:hint="@string/prescriptionRemaining"
       	    android:textSize="10sp" />
    	
       	<EditText
       	    android:id="@+id/prescriptionSize"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:ems="10"
       	    android:hint="@string/prescriptionSize"
       	    android:textSize="10sp" />
       	
       	<EditText
       	    android:id="@+id/prescriptionColor"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
       	    android:ems="10"
       	    android:hint="@string/prescriptionColor"
       	    android:textSize="10sp" />

    </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="55dp"
        android:clickable="true"
        android:onClick="sendMessage"
        android:text="@string/saveButton"
        android:textSize="30sp" />

</LinearLayout>